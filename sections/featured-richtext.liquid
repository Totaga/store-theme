{{ 'section-rich-text-featured-product.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-container {
    display: grid;
    grid-template-columns: 2fr 1fr;
    /* Two-thirds and one-third layout */
    gap: {{ section.settings.gap_between | times: 0.75 | round: 0 }}px;
  }

  @media screen and (max-width: 750px) {
    .section-{{ section.id }}-container {
      grid-template-columns: 1fr;
      /* Stack elements in a single column for mobile */
    }
  }

  /* Conditionally swap grid template based on the product card position */
  {% if section.settings.product_card_position == 'left' %}
    .section-{{ section.id }}
    -container {
      grid-template-columns: 1fr 2fr;
      /* Swap layout: Product 1/3, Text 2/3 */
    }
  {% endif %}

  .section-{{ section.id }}
  -padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .section-{{ section.id }}-container {
    gap: {{ section.settings.gap_between | times: 0.5 | round: 0 }}px;
  }
  }
{%- endstyle -%}

<div class="{% unless section.settings.full_width %}page-width{% endunless %} section-{{ section.id }}-container section-{{ section.id }}-padding">
  {% if section.settings.featured_product != blank %}
    {% assign product = all_products[section.settings.featured_product] %}
      {% if section.settings.product_card_position == "left" %}
      <!-- Product Card on the Left -->
      <div class="section-{{ section.id }}-featured-product">
        {% render 'card-product'
          ,
 card_product: product
          ,
 media_aspect_ratio: "square"
          ,
 show_secondary_image: false
          ,
 lazy_load: false
          ,
 quick_add: true
          ,
 section_id: section.id
        %}
      </div>
      <!-- Rich Text on the Right -->
      <div class="section-{{ section.id }}-richtext content-container">
        <div class="rich-text__wrapper">
          {{ section.settings.heading }}
          {{ section.settings.rich_text_content }}
        </div>
      </div>
    {% else %}
      <!-- Rich Text on the Left -->
      <div class="section-{{ section.id }}-richtext content-container">
        <div class="rich-text__wrapper">
          {{ section.settings.heading }}
          {{ section.settings.rich_text_content }}
        </div>
      </div>
      <!-- Product Card on the Right -->
      <div class="section-{{ section.id }}-featured-product">
        {% render 'card-product'
          ,
 card_product: product
          ,
 media_aspect_ratio: "square"
          ,
 show_secondary_image: false
          ,
 lazy_load: false
          ,
 quick_add: true
          ,
 section_id: section.id
        %}
      </div>
    {% endif %}
  {% endif %}
</div>

{% schema %}
  {
    "name": "Text & Product",
    "tag": "section",
    "class": "section",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "richtext",
        "id": "rich_text_content",
        "label": "Rich Text Content",
        "default": "<p>Insert your rich text content here.</p>"
      },
      {
        "type": "richtext",
        "id": "heading",
        "label": "Heading",
        "default": "<h1>Technology on Your Terms</h1>"
      },
      {
        "type": "product",
        "id": "featured_product",
        "label": "Select a featured product"
      },
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "Full width",
        "default": false
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding Top",
        "default": 20
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 20
      },
      {
        "type": "range",
        "id": "gap_between",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Gap Between",
        "default": 20
      },
      {
        "type": "select",
        "id": "product_card_position",
        "label": "Product Card Position",
        "options": [
          {
            "value": "right",
            "label": "Right"
          },
          {
            "value": "left",
            "label": "Left"
          }
        ],
        "default": "right"
      }
    ],
    "presets": [
      {
        "name": "Text & Product",
        "category": "Custom"
      }
    ]
  }
{% endschema %}